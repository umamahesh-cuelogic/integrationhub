{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "ubuntuStorageName": {
            "type": "string"
        },
        "adminUserName": {
            "type": "string"
        },

        "adminPassword": {
            "type": "string"
        },
         "protocol":{
                "type":"string"
            },
            "skuname": {
                "type": "string"

            },
            "ubuntuName": {

                "type": "string",
                "metadata": {
                    "description": "description"
                }
                
            }
            
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('name')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-11-01",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "nsgRule1",
                        "properties": {
                            "description": "description",
                            "protocol": "[parameters('protocol')]",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
            
        },
        {
            "name": "[parameters('ubuntuStorageName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "location": "[parameters('location')]",
            "tags": {
                "displayName": "UBUNTUVM32 Storage Account"
            },
            "sku": {
                "name": "[parameters('skuname')]"
            },
            "kind": "Storage"
        },
        {
            "name": "UBUNTUVM32-PublicIP",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-11-01",
            "location": "[parameters('location')]",
            "tags": {
                "displayName": "PublicIPAddress"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[toLower('UBUNTUVM323')]"
                }
            }
        },
        {
            "name": "UBUNTUVM32-nsg",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-11-01",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "nsgRule1",
                        "properties": {
                            "description": "description",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "name": "UBUNTUVM32-VirtualNetwork",
            "location": "[parameters('location')]",

            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', 'UBUNTUVM32-nsg')]"
            ],
            "tags": {
                "displayName": "[concat(toUpper(parameters('ubuntuName')), '-VirtualNetwork')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[concat(toUpper(parameters('ubuntuName')), '-VirtualNetwork-Subnet')]",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(toUpper(parameters('ubuntuName')), '-nsg'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "UBUNTUVM32-NetworkInterface",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(toUpper(parameters('ubuntuName')), '-PublicIP'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', concat(toUpper(parameters('ubuntuName')), '-VirtualNetwork'))]"
            ],
            "tags": {
                "displayName": "[concat(toUpper(parameters('ubuntuName')), '-NetworkInterface')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(toUpper(parameters('ubuntuName')), '-PublicIP'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', concat(toUpper(parameters('ubuntuName')), '-VirtualNetwork'), concat(toUpper(parameters('ubuntuName')), '-VirtualNetwork-Subnet'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "UBUNTUVM32",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-03-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(toUpper(parameters('ubuntuName')), '-NetworkInterface'))]"
            ],
            "tags": {
                "displayName": "[parameters('ubuntuName')]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_A2_v2"
                },
                "osProfile": {
                    "computerName": "[parameters('ubuntuName')]",
                    "adminUsername": "[parameters('adminUserName')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "UbuntuServer",
                        "sku": "16.04-LTS",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(toUpper(parameters('ubuntuName')), '-OSDisk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(toUpper(parameters('ubuntuName')), '-NetworkInterface'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts/', toLower('ihdbstorage'))).primaryEndpoints.blob]"
                    
                    }
                }
            }
        }
        
        

    ],
    "outputs": {}
}